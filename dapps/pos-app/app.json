{
  "expo": {
    "name": "WPay",
    "slug": "mobile-pos",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "WPay",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.reown.mobilepos",
      "appleTeamId": "W5R8AG9K22",
      "config": {
        "usesNonExemptEncryption": false
      },
      "infoPlist": {
        "NFCReaderUsageDescription": "This app requires NFC to send messages"
      },
      "entitlements": {
        "com.apple.developer.nfc.readersession.formats": [
          "TAG"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.reown.mobilepos",
      "permissions": [
        "android.permission.NFC"
      ],
      "versionCode": 3
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "@sentry/react-native/expo",
        {
          "url": "https://sentry.io/",
          "note": "Use SENTRY_AUTH_TOKEN env to authenticate with Sentry.",
          "project": "mobile-pos-react-native",
          "organization": "walletconnect"
        }
      ],
      "./scripts/withAndroidReleaseSigningConfig.js",
      [
        "expo-font",
        {
          "fonts": [
            "./assets/fonts/KHTeka-Light.otf",
            "./assets/fonts/KHTeka-Regular.otf",
            "./assets/fonts/KHTeka-Medium.otf"
          ],
          "android": {
            "fonts": [
              {
                "fontFamily": "KH Teka",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/KHTeka-Light.otf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/KHTeka-Regular.otf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/KHTeka-Medium.otf",
                    "weight": 500
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/KHTeka-Light.otf",
              "./assets/fonts/KHTeka-Regular.otf",
              "./assets/fonts/KHTeka-Medium.otf"
            ]
          }
        }
      ],
      [
        "react-native-vision-camera",
        {
          "cameraPermissionText": "$(PRODUCT_NAME) needs access to your Camera."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
