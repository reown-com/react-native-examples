{
  "expo": {
    "name": "expo-wallet",
    "slug": "expo-wallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "expowallet",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.walletconnect.expowallet"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.walletconnect.expowallet"
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 180,
          "resizeMode": "contain",
          "backgroundColor": "#202020"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": false
        }
      ],
      [
        "expo-font",
        {
          "android": {
            "fonts": [
              {
                "fontFamily": "KH Teka",
                "fontDefinitions": [
                  {
                    "path": "./assets/fonts/KHTeka-Light.otf",
                    "weight": 300
                  },
                  {
                    "path": "./assets/fonts/KHTeka-Regular.otf",
                    "weight": 400
                  },
                  {
                    "path": "./assets/fonts/KHTeka-Medium.otf",
                    "weight": 500
                  }
                ]
              }
            ]
          },
          "ios": {
            "fonts": [
              "./assets/fonts/KHTeka-Light.otf",
              "./assets/fonts/KHTeka-Regular.otf",
              "./assets/fonts/KHTeka-Medium.otf"
            ]
          }
        }
      ],
      "expo-secure-store"
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
